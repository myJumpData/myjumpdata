{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myjumpdata/api-client": [
        "libs/api-client/src/index.ts"
      ],
      "@myjumpdata/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@myjumpdata/const": [
        "libs/const/src/index.ts"
      ],
      "@myjumpdata/consts": [
        "libs/consts/src/index.ts"
      ],
      "@myjumpdata/redux": [
        "libs/redux/src/index.ts"
      ],
      "@myjumpdata/service": [
        "libs/service/src/index.ts"
      ],
      "@myjumpdata/store": [
        "libs/store/src/index.ts"
      ],
      "@myjumpdata/util": [
        "libs/util/src/index.ts"
      ],
      "@myjumpdata/utils": [
        "libs/utils/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
